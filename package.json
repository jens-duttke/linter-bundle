{
	"name": "linter-bundle",
	"version": "4.0.3",
	"description": "Ready-to use bundle of linting tools, containing configurations for ESLint, stylelint and markdownlint.",
	"keywords": [
		"eslint",
		"stylelint",
		"markdownlint",
		"config",
		"functional",
		"import",
		"jest",
		"node",
		"react",
		"react-hooks",
		"unicorn",
		"scss"
	],
	"author": "Jens Duttke <github@duttke.de> (https://github.com/jens-duttke)",
	"license": "MIT",
	"bin": {
		"lint": "lint.js"
	},
	"engines": {
		"node": "^16.0.0 || >=18.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/jens-duttke/linter-bundle.git"
	},
	"scripts": {
		"publish:major": "npm version major",
		"publish:minor": "npm version minor",
		"publish:patch": "npm version patch",
		"lint": "npm run _validate-stylelint-options && npm run _stylelint-find-rules && node ./lint files tsc ts md audit --min-severity=critical",
		"preversion": "npm run check-outdated && npm run lint",
		"postversion": "git push && git push --tags && npm publish",
		"check-outdated": "npx --yes -- check-outdated --ignore-pre-releases",
		"_stylelint-find-rules": "stylelint-find-new-rules ./stylelint/index.js",
		"_validate-stylelint-options": "node ./validate-stylelint-options.mjs"
	},
	"dependencies": {
		"@typescript-eslint/eslint-plugin": "6.5.0",
		"@typescript-eslint/parser": "6.5.0",
		"@typescript-eslint/utils": "6.5.0",
		"eslint": "8.48.0",
		"eslint-import-resolver-typescript": "3.6.0",
		"eslint-import-resolver-webpack": "0.13.7",
		"eslint-plugin-eslint-comments": "3.2.0",
		"eslint-plugin-functional": "6.0.0",
		"eslint-plugin-import": "2.28.1",
		"eslint-plugin-jest": "27.2.3",
		"eslint-plugin-jsdoc": "46.5.1",
		"eslint-plugin-jsx-a11y": "6.7.1",
		"eslint-plugin-n": "16.0.2",
		"eslint-plugin-promise": "6.1.1",
		"eslint-plugin-react": "7.33.2",
		"eslint-plugin-react-hooks": "4.6.0",
		"eslint-plugin-unicorn": "48.0.1",
		"markdownlint-cli": "0.35.0",
		"micromatch": "4.0.5",
		"postcss-scss": "4.0.7",
		"stylelint": "15.10.3",
		"stylelint-declaration-block-no-ignored-properties": "2.7.0",
		"stylelint-order": "6.0.3",
		"stylelint-scss": "5.1.0",
		"stylelint-use-logical-spec": "5.0.0"
	},
	"peerDependencies": {
		"postcss-value-parser": "*",
		"typescript": ">=4.0.0"
	},
	"devDependencies": {
		"@types/eslint": "8.44.2",
		"@types/micromatch": "4.0.2",
		"@types/node": "20.5.7",
		"stylelint-find-new-rules": "4.1.1",
		"typescript": "5.2.2"
	}
}

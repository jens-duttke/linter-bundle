{
	"name": "linter-bundle",
	"version": "7.11.0",
	"type": "module",
	"description": "Ready-to use bundle of linting tools, containing configurations for ESLint, stylelint and markdownlint.",
	"keywords": [
		"eslint",
		"stylelint",
		"markdownlint",
		"config",
		"functional",
		"import",
		"jest",
		"node",
		"react",
		"react-hooks",
		"unicorn",
		"scss",
		"css"
	],
	"author": "Jens Duttke <github@duttke.de> (https://github.com/jens-duttke)",
	"license": "MIT",
	"bin": {
		"lint": "lint.js"
	},
	"engines": {
		"node": "^20.19.0 || ^22.13.0 || >=24.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/jens-duttke/linter-bundle.git"
	},
	"scripts": {
		"publish:major": "npm version major",
		"publish:minor": "npm version minor",
		"publish:patch": "npm version patch",
		"lint": "npm run _test-stylelint && npm run _stylelint-find-rules && node ./lint files tsc ts md audit --min-severity=critical",
		"preversion": "npm whoami && npm run check-outdated && npm run lint",
		"postversion": "git push && git push --tags && npm publish",
		"check-outdated": "npx --yes -- check-outdated --ignore-pre-releases --min-age 30 --min-age-patch 1",
		"_stylelint-find-rules": "stylelint-find-new-rules ./stylelint/index.mjs",
		"_test-stylelint": "node ./test-stylelint.js"
	},
	"dependencies": {
		"@stylistic/eslint-plugin": "5.9.0",
		"eslint": "9.39.3",
		"eslint-formatter-unix": "9.0.1",
		"eslint-import-resolver-typescript": "4.4.4",
		"eslint-import-resolver-webpack": "0.13.10",
		"eslint-plugin-eslint-comments": "3.2.0",
		"eslint-plugin-functional": "9.0.2",
		"eslint-plugin-import": "2.32.0",
		"eslint-plugin-jest": "29.15.0",
		"eslint-plugin-jsdoc": "62.7.0",
		"eslint-plugin-jsx-a11y": "6.10.2",
		"eslint-plugin-n": "17.24.0",
		"eslint-plugin-promise": "7.2.1",
		"eslint-plugin-react": "7.37.5",
		"eslint-plugin-react-hooks": "7.0.1",
		"eslint-plugin-unicorn": "63.0.0",
		"globals": "17.3.0",
		"markdownlint-cli": "0.47.0",
		"micromatch": "4.0.8",
		"postcss-scss": "4.0.9",
		"stylelint": "17.3.0",
		"stylelint-declaration-block-no-ignored-properties": "3.0.0",
		"stylelint-high-performance-animation": "2.0.0",
		"stylelint-order": "7.0.1",
		"stylelint-scss": "7.0.0",
		"stylelint-use-logical": "2.1.3",
		"typescript-eslint": "8.56.0"
	},
	"peerDependencies": {
		"@typescript-eslint/utils": "*",
		"postcss-value-parser": "*",
		"typescript": ">=4.0.0"
	},
	"devDependencies": {
		"@types/eslint": "9.6.1",
		"@types/micromatch": "4.0.10",
		"@types/node": "25.3.0",
		"stylelint-find-new-rules": "6.0.0",
		"typescript": "5.9.3"
	}
}

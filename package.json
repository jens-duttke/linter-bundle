{
	"name": "linter-bundle",
	"version": "1.28.0",
	"description": "Ready-to use bundle of linting tools, containing configurations for ESLint, stylelint and markdownlint.",
	"keywords": [
		"eslint",
		"stylelint",
		"markdownlint",
		"config",
		"functional",
		"import",
		"jest",
		"node",
		"react",
		"react-hooks",
		"unicorn",
		"scss"
	],
	"author": "Jens Duttke <github@duttke.de> (https://github.com/jens-duttke)",
	"license": "MIT",
	"bin": {
		"lint": "lint.js"
	},
	"engines": {
		"node": ">=14.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/jens-duttke/linter-bundle.git"
	},
	"scripts": {
		"publish:major": "npm version major",
		"publish:minor": "npm version minor",
		"publish:patch": "npm version patch",
		"lint": "node ./lint tsc ts md audit --min-severity=critical",
		"preversion": "npm run check-outdated && npm run stylelint-find-rules && npm run lint",
		"postversion": "git push && git push --tags && npm publish",
		"check-outdated": "npx --yes -- check-outdated --ignore-pre-releases"
	},
	"dependencies": {
		"@typescript-eslint/eslint-plugin": "5.3.0",
		"@typescript-eslint/parser": "5.3.0",
		"eslint": "8.1.0",
		"eslint-import-resolver-typescript": "2.5.0",
		"eslint-import-resolver-webpack": "0.13.2",
		"eslint-plugin-eslint-comments": "3.2.0",
		"eslint-plugin-functional": "4.0.2",
		"eslint-plugin-import": "2.25.2",
		"eslint-plugin-jest": "25.2.3",
		"eslint-plugin-jsdoc": "37.0.3",
		"eslint-plugin-node": "11.1.0",
		"eslint-plugin-react-hooks": "4.2.1-alpha-13455d26d-20211104",
		"eslint-plugin-unicorn": "38.0.0",
		"markdownlint-cli": "0.29.0",
		"postcss-scss": "4.0.2",
		"stylelint": "14.0.1",
		"stylelint-order": "5.0.0",
		"stylelint-scss": "4.0.0",
		"stylelint-selector-no-empty": "1.0.8",
		"stylelint-use-logical-spec": "3.2.2"
	},
	"peerDependencies": {
		"typescript": "^4.0.0"
	},
	"devDependencies": {
		"@types/eslint": "7.28.2",
		"@types/node": "16.11.6",
		"typescript": "4.4.4"
	}
}
